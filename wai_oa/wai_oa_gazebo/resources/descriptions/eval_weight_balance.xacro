<?xml version="1.0"?>

<robot name="eval_weight_balance">

    <material name="OA">
        <color rgba="0.101960784 0.42745098 0.588235294 0.333"/>
    </material>

    <gazebo reference="link_base">
        <turnGravityOff>false</turnGravityOff>
    </gazebo>
    <gazebo reference="link_eval_weight_balance_body">
        <turnGravityOff>true</turnGravityOff>
    </gazebo>
    <gazebo reference="link_eval_weight_balance_suspension">
        <turnGravityOff>false</turnGravityOff>
    </gazebo>
    <gazebo>
        <plugin name="gazebo_ros_template" filename="libgazebo_ros_template.so"/>
        <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
        </plugin>
    </gazebo>

    <link name="link_base">
        <visual>
            <origin xyz="0.0 0.0 0.0"/>
            <geometry>
                <sphere radius="0.1"/>
            </geometry>
            <material name="OA"/>
        </visual>
        <inertial>
            <origin xyz="0.0 0.0 0.5" rpy="0.0 0.0 0.0"/>
            <mass value="10000.0"/>
            <inertia  ixx="100.0" ixy="0.0"  ixz="0.0"  iyy="100.0"  iyz="0.0"  izz="100.0"/>
        </inertial>
        <collision>
            <origin xyz="0.0 0.0 0.15" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="5.0 2.0 0.3"/>
            </geometry>
        </collision>
        <collision> <!-- Ground Plate -->
            <origin xyz="0.0 0.0 2.05" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="1.0 1.0 0.1"/>
            </geometry>
        </collision>
        <collision> <!-- Front Plate -->
            <origin xyz="0.45 0.0 2.35" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.1 1.0 0.5"/>
            </geometry>
        </collision>
        <collision> <!-- Back Plate -->
            <origin xyz="-0.45 0.0 2.35" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.1 1.0 0.5"/>
            </geometry>
        </collision>
        <collision> <!-- Left Plate -->
            <origin xyz="0.0 0.45 2.35" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.8 0.1 0.5"/>
            </geometry>
        </collision>
        <collision> <!-- Right Plate -->
            <origin xyz="0.0 -0.45 2.35" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.8 0.1 0.5"/>
            </geometry>
        </collision>
    </link>
    <link name="link_eval_weight_balance_body"> <!-- if links in between do not have physical properties JSP does not publish properly! -->
        <visual>
            <origin xyz="0.0 0.0 0.0"/>
            <geometry>
                <mesh filename="package://wai_oa_gazebo/resources/reps/eval_weight_balance/link_eval_weight_balance_body.dae"/>
            </geometry>
        </visual>
    </link>
    <link name="link_eval_weight_balance_suspension">
        <visual>
            <origin xyz="0.0 0.0 0.0"/>
            <geometry>
                <mesh filename="package://wai_oa_gazebo/resources/reps/eval_weight_balance/link_eval_weight_balance_suspension.dae"/>
            </geometry>
        </visual>
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="1.0"/>
            <inertia  ixx="1.0" ixy="0.0"  ixz="0.0"  iyy="1.0"  iyz="0.0"  izz="1.0"/>
        </inertial>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <mesh filename="package://wai_oa_gazebo/resources/reps/eval_weight_balance/link_eval_weight_balance_suspension.dae"/>
            </geometry>
        </collision>
    </link>

    <joint name="joint_eval_weight_balance_body" type="fixed">
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        <parent link="link_base"/>
        <child link="link_eval_weight_balance_body"/>
    </joint>
    <joint name="joint_eval_weight_balance_suspension" type="revolute">
        <axis xyz="0 1 0" />
        <origin xyz="0.0 0.0 1.5" rpy="0.0 0.0 0.0"/>
        <parent link="link_base"/>
        <child link="link_eval_weight_balance_suspension"/>
        <limit lower="-0.4" upper="0.4" effort="1000.0" velocity="0.05"/>
        <dynamics damping="10000.0" friction="10000.0"/>
    </joint>

    <transmission name="trans_eval_weight_balance_suspension">
        <type>transmission_interface/SimpleTransmission</type>
        <joint name="joint_eval_weight_balance_suspension">
          <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
        </joint>
        <actuator name="actuator_eval_weight_balance_suspension">
          <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
          <mechanicalReduction>1</mechanicalReduction>
        </actuator>
    </transmission>

</robot>
